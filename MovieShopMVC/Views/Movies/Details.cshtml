@model ApplicationCore.Models.MovieDetailsModel

<div class="container-fluid">
    <div class="row" id="movie_title">
        @*movie poster*@
        <div class="col-5 justify-content-center">
            <img src="@Model.PosterUrl" class="img-fluid" />
        </div>
       @* mid-section*@
        <div class="col-5">
            <div class="row">
                <h2>@Model.Title</h2>
            </div>
            <div class="row">
                <span>@Model.Tagline</span>
            </div>
            <div class="row">
                <div class="col">
                    <span>@Model.RunTime | @Model.ReleaseDate</span>
                </div>
                <div class="col">

                </div>
            </div>
            
        </div>
       @*review and buy*@
        <div class="col-2 justify-content-center">

        </div>
    </div>
    <div class="row" id="movie_content">

    </div>

</div>