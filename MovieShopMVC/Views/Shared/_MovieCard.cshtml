@model List<ApplicationCore.Models.MovieCardModel>

@*Movie Card Partial View *@

<div class="rounded">
    <div class="container-fluid">
        <div class="row">

            @foreach (var movieCard in Model)
            {
                <div class="col-6 col-lg-3 col-sm-4 col-xl-2">
                    @*<partial name="_MovieCard" model="movieCard" />*@
                    <div class="card mb-4">
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@movieCard.Id">
                            <img src="@movieCard.PosterUrl" class="img-fluid" alt="@movieCard.Title" />
                        </a>
                    </div>
                </div>
            }

        </div>
        <div class="row">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
        </div>
    </div>
</div>