@model ApplicationCore.Models.CastDetailsModel

@*int id, string (gender, name, profilepath, tmdburl), List MovieCardModel MoviesOfCast*@

<div class="container-fluid">
    <div class="row">
        <div class="col-3 d-flex justify-content-center">
            <img src="@Model.ProfilePath" class="img-fluid" alt="@Model.Name"/>
        </div>
        <div class="col-9">
            <div class="flex-row">
                <h3 class="mb-3">@Model.Name</h3>
                <a href="@Model.TmdbUrl" target="_blank" class="btn btn-primary mb-3" role="button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
                        <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z"/>
                    </svg>
                    TMDB
                </a>
            </div>
            <label for="movieCasted" class="fs-3">Movies Casted</label>
            <div class="row flex-nowrap overflow-scroll" id="movieCasted">
                @foreach (var card in Model.MoviesOfCast)
                {
                    <div class="col-2">        
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@card.Id">
                                <div class="card card-img text-center h-100">
                                    <img src="@card.PosterUrl" class="img-fluid" alt="@card.Title" />
                                    <h4 class="mt-1">@card.Title</h4>
                                </div>
                            </a>
                    </div>
                }
            </div>
        </div>
    </div>
    
</div>